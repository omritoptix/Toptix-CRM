<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Toptix CRM</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                      <p class="site-title">  @Html.ActionLink("ToptixCRM", "Index", "DataManagement")</p>
                </div>
@*                <div class="float-left">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                        
                    </section>
                </div>*@
                <div class="float-right">
                    
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Data Management", "Index", "DataManagement")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Order")</li>
                            <li>@Html.ActionLink("Reports", "Index", "Home")</li>
                            <li>@Html.ActionLink("Admin", "Index", "Admin")</li>   
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        
        <div id="body" >
            <div id="subheader">
                <div id="submenu">
                    @RenderSection("tools", required: false)
                </div>
            </div>
            <div class="content-wrapper">
               @Html.Partial("_AdminMenu")
                <section class="main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
        <!--<footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Technion 2013</p>
                </div>
            </div>
        </footer>-->
        @RenderSection("featured", required: false)
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    </body>
</html>

